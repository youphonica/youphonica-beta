  <title>Account settings</title>
  <link rel="icon" type="image/png"  href="\media\32 x 32 icon.png">
</head>
<body>










  <%- include('partials/header')%>   






    <div id="container-new" class="col-6 offset-3">
<h2 class="text-center mt-3">
    <div class="line-before"></div>
    Edit artist account 
    <div class="line-after"></div>
  </h2>


<form action="/artists/<%=artist._id%>?_method=PUT" method="POST">

  <label for="artName" class="form-label">Artist name:</label>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
    </div>
    <input type="text" value="<%= artist.artName %> " placeholder="Artist name..." 
    class="mb-0 price" id="artName" name="artName" minlength="1" maxlength="35" required>
  </div>
  <p class="valid-name mt-0 mb-2"></p>
  <p class="invalid-name mt-0 mb-2"></p>
   
  <label for="artEmail" class="form-label mt-3">your email:</label>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
    </div>
    <input type="email" placeholder="for example... artist@email.com" class="mb-3 price" 
    name="artEmail" id="artEmail" value="test@gmail.com" minlength="9" maxlength="254" required>
  </div>
  <div class="message-email"></div>

  <div class="input-container mt-3">
      <label for="bio" class="form-label">Artist description (between 50 to 350 characters)</label>
      <textarea name="bio" id="bio" cols="50" rows="5"
       class="mb-4" minlength="50" maxlength="350" required></textarea>
     
     
      <label for="month" class="mb-2 mt-3">Select a genre</label>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="genre">Genre</label>
        </div>
        <select name="genre" class="custom-select form-control" id="inputGroupSelect01">
            <option value="pop" <%=artist.genre === 'pop' ? 'selected': '' %>>pop</option>
            <option value="rock" <%=artist.genre === 'rock' ? 'selected': '' %>>rock</option>
            <option value="metal" <%=artist.genre === 'metal' ? 'selected': '' %>>metal</option>
            <option value="rap/hip hop" <%=artist.genre === 'rap/hip hop' ? 'selected': '' %>>rap/hip hop</option>
            <option value="jazz" <%=artist.genre === 'jazz' ? 'selected': '' %>>jazz</option>
            <option value="instrumental" <%=artist.genre === 'instrumental' ? 'selected': '' %>>instrumental</option>
            <option value="classical" <%=artist.genre === 'classical' ? 'selected': '' %>>classical</option>
            <option value="funk" <%=artist.genre === 'funk' ? 'selected': '' %>>funk</option>
            <option value="rnb" <%=artist.genre === 'rnb' ? 'selected': '' %>>rnb</option>
            <option value="blues" <%=artist.genre === 'blues' ? 'selected': '' %>>blues</option>
            <option value="country" <%=artist.genre === 'country' ? 'selected': '' %>>country</option>
            <option value="acoustic" <%=artist.genre === 'acoustic' ? 'selected': '' %>>acoustic</option>
            <option value="swing" <%=artist.genre === 'swing' ? 'selected': '' %>>swing</option>
            <option value="synthwave" <%=artist.genre === 'synthwave' ? 'selected': '' %>>synthwave</option>
        </select>
      </div>

   
      <div class="form-check offset-3">
        <input class="form-check-input" type="checkbox" checked value="" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
            by ticking this you are agreeing to the TOS
        </label>
      </div>

<div class="form-row text-center">
    <div class="col-12">
        <button type="submit" id="submit" class="mt-3 rounded">Submit</button>
    </div>
 </div>
</div>
</form>


<a href="/artists/<%= artist.id %>/delete-account">
<button class="text-center buy buy-btn mt-3">delete account</button>
</a>


</div>
</div>
<div class="mt-auto">
<%- include('partials/footer')%>   
</div> 
</body>


<script>
  const alert = document.getElementById('pdAlert');
  const dismiss = document.getElementById('dismiss-pd');
  dismiss.onclick = function () {
    if (alert.style.display !== "none") {
      alert.style.display = "none";
    } else {
      alert.style.display = "block";
    }
  };
  
  </script>
