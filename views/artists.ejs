<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="\css\index.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="\js\dropdown.js" defer></script>
    <title>Youphonica: Artists</title>
    <link rel="icon" type="image/png"  href="\media\32 x 32 icon.png">
</head>
<body>
 
    <%- include('partials/header')%>   
    
    
    
    
    
    
    


<% if(anf && anf.length) { %> 
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3" 
    id="pdAlert" role="alert">
        <h3 class="text-center">
            <%= anf %> 
        </h3>
        <p id="dismiss-pd" class="text-center dismiss">dismiss</p>
      </div>
    <%  } %>


    

    <div class="options" style="text-align: center; margin-top: 3rem;">
        <a href="/posts/free"><button class="option round features">pop</button></a>
        <a href="/posts/under-10"><button class="option round features">rock</button></a>
        <a href="/posts/under-15"><button class="option round features">metal</button></a>
    
    
    
        <button class="option round features">following</button>
        <a href="/artists"><button class="option round features">synthwave</button></a>
        <button class="option round features">hip hop</button>
        <button class="option round features">country</button>
    
    </div> 











    <div id="container-new" class="">
<h2 class="text-center mt-3">
    <div class="line-before"></div>
    Artists
    <div class="line-after"></div>
  </h2>
</div>

<div id="container-new" class="col-10 offset-1">
<% for (let Artist of Artists) {%> 

    <% if(Artist.isVerified === 'false') { %>

        <% }else{%> 










<div class="content">
<div class="row mb-3">
    <div class="col-md-4">
        <a href="/artists/<%= Artist.id  %>">
        <img class="img-fluid thumb p-2 logo" alt="" src="<%= Artist.banner  %>">
        </a>
    </div>
    <div class="col-md-8">
        <div class="card-body">
            <a href="/artists/<%= Artist.id  %>">
            <h3 class="card-title">
                <%= Artist.artName  %>
            </h3>
            </a>
            <p class="card-text"><%= Artist.bio  %></p>


            <p class="card-text info">
                 Artist genre: <%= Artist.genre  %>
            </p>

        </div>
    </div>
</div>
</div>

    
<% }%>   
<% }%>  

</div>

<% if(cookies == null || undefined) {%> 
    <div class="cookie-pop-up">
      
     <p>Youphonica uses cookies to make certain aspcets of the site work. <a href="">learn more</a></p> 
        <br>
        <div class="cookie-buttons">
          <form action="/cookies-refuse" method="post">
        <button type="submit" class="cookie-btn reject">reject non-essential
        </button>
      </form>
  
      <form action="/cookies-accept" method="post">
      <button type="submit" class="cookie-btn accept">accept all</button>
    </form>
      </div>
  </div>
<% }else{ %>
  <% } %> 


</div>
    </div>
<div class="mt-auto">
<%- include('partials/footer')%>   


</div> 
</body>

<script>
    const alert = document.getElementById('pdAlert');
    const dismiss = document.getElementById('dismiss-pd');
    dismiss.onclick = function () {
      if (alert.style.display !== "none") {
        alert.style.display = "none";
      } else {
        alert.style.display = "block";
      }
    };
    
    </script>
<style>
    a{
    color: #3c3d3c;
    text-decoration: none;
}

a:hover{
    color: #3c3d3c;
 text-decoration: underline #1ca78b 0.3vh;
}

footer.a{
    color: blue;
}

</style>
</html>